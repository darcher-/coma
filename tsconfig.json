{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "paths": {
      "@coma-lib/*": ["pkg/*"]
    },
    "types": ["node", "ts-node"],
    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "exclude": ["node_modules", "**/node_modules/*", "**/dist", "esb"],
  "include": ["**/*"]
}
