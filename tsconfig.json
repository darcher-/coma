{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "paths": {
      "@coma/*": ["pkgs/*"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "types": ["node", "ts-node"]
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["**/*"]
}
