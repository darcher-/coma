{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "stylelint-config-idiomatic-order",
    "./node_modules/prettier-stylelint/config.js",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "./tsconfig.json",
    "sourceType": "module",
    "tsconfigRootDir": "./"
  },
  "plugins": ["@typescript-eslint", "prettier", "stylelint-prettier"],
  "root": true,
  "rules": {
    "no-console": 1,
    "prettier/prettier": 2,
    "indentation": 2,
    "string-quotes": "single"
  }
}
