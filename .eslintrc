{
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "project": "./tsconfig.json",
    "sourceType": "module",
    "tsconfigRootDir": "./",
    "parserOptions.extraFileExtensions": ["**/*.scss"]
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "root": true,
  "rules": {
    "no-console": 1,
    "prettier/prettier": 2
  }
}
